marks = np.array([100,4,60,46,36,78,66,43,67])
failed =  marks[marks < 40]
print("failed",failed)

mask=marks > 10

marks[mask]=0
print(marks)

# fancy indexing

x = np.arange(1,11)
print(x)

y = np.array([3,4,5])
print(x[y])


t = np.arange(1,10)
b = np.array([[2,5],[4,7]])
c =t[b]
print(c) 





a = np.random.randint(10,100,size=(3,3))           
print(a)
row=[1,2]
col=[0,2]
s = a[row,col]
print(s)
