A = np.random.randint(0,100,size=(5,5))
rows=[1,3,4]
cols=[2,4,0]
T = A[rows,cols]
print(A)
print(T)
T.sort()         #sort
print(T)
A.sort(axis=0)
print(A)

u = np.arange(20)
